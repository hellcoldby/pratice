<!--index.wxml-->
<page-meta root-font-size="30rpx"></page-meta>
<scroll-view scroll-y type="list" style="height: 100vh;">

<!-- 数据绑定： 时钟 -->
  <view class="container">
    <view class="box">时间 {{time}}</view>
  </view>

<!-- 数据绑定： 变量 -->
  <view>数据绑定： {{msg}}</view>

<!-- 逻辑运算 -->
  <view>运算：{{a+b}}+{{c}}</view>

<!-- 条件语句： if else -->
  <view style="display:flex">
      <text>if else 条件语句：</text>
    <block>
      <view wx:if="{{len>5}}">5</view>
      <view wx:elif="{{len>2}}">2</view>
      <view wx:else>3</view>
    </block>
  </view>

<!-- 列表渲染1 -->
  <block>
    <view wx:for="{{array}}">
      {{index}}:{{item.message}}
    </view>
  </block>


 <!--列表渲染2： for 另一种写法 -->
  <block wx:for="{{array}}">
    <view>{{index}}:{{item.message}}</view>
  </block>

 <!--列表渲染3： 自定义变量名 -->
  <block>
    <view wx:for="{{array}}" wx:for-index="idx" wx:for-item="itemName">
     {{idx}}: {{itemName.message}}
    </view>
  </block>


  <!--列表渲染4：动态变化  -->
  <block>
    <view><switch  wx:for="{{objectArray}}" wx:key="unique" > {{item.id}} </switch></view> 
    <button type="primary" size="mini" bindtap="switch" > 切换顺序 </button>
    <button type="default" size="mini" bindtap="addToFront" > 添加 </button>
    <button type="default" size="mini" bindtap="subtractToFront" > 删除 </button>
  </block>

  <view>
    <block>
      <view><switch wx:for="{{numberArray}}" wx:key="*this" > {{item}} </switch></view> 
      <view><button type="warn" size="mini" bindtap="addNumberToFront"> 添加 </button></view>
    </block>
  </view>
</scroll-view>
